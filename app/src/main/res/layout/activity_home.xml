<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.myapplication.HomeActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="353dp"
        android:layout_height="493dp"
        android:layout_alignBottom="@+id/buttonNight5"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="-16dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background_pic" />

    <Button
        android:id="@+id/buttonNight4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="137dp"
        android:layout_marginLeft="121dp"
        android:layout_marginStart="121dp"
        android:alpha="0.7"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="NIGHT MARKET"
        android:textColor="#fff" />

    <Button
        android:id="@+id/buttonNight5"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_marginBottom="23dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="NIGHT MARKET"
        android:textColor="#fff"
        android:alpha="0.7"/>

    <Button
        android:id="@+id/buttonNight3"
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="NIGHT MARKET"
        android:textColor="#fff"
        android:alpha="0.7"/>

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonNight"
        android:layout_width="118dp"
        android:layout_height="119dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="30dp"
        android:alpha="0.7"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="NIGHT MARKET"
        android:textColor="#fff" />

    <Button
        android:id="@+id/buttonDay"
        android:layout_width="142dp"
        android:layout_height="141dp"
        android:layout_alignBottom="@+id/buttonNight3"
        android:layout_alignLeft="@+id/buttonNight5"
        android:layout_alignStart="@+id/buttonNight5"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="Search"
        android:textColor="#fff"
        android:alpha="0.7"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="What would you like to do?"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="center"
        app:fontFamily="sans-serif" />

</RelativeLayout>
